ScreenManager:
    MainScreen:
    SettingsScreen:

<MainScreen>:
    name: "main"
    orientation: "vertical"
    padding: "10dp"
    canvas.before:
        Rectangle:
            id: background_image
            pos: self.pos
            size: self.size
            source: root.image_source

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            id: upper_bar
            size_hint: 1, 0.1

            Label:
                id: label_counter
                valign: "middle"
                font_size: "12dp"
                size_hint: 0.25, 1

            Label:
                id: label_language
                font_size: "19dp"

            Button:
                id: button_exit
                #text: "menu"
                pos_hint: {"center_y": 0.5}
                #font_size: "19dp"
                size_hint: 0.25, 0.7
                background_color: (253/255, 188/255, 78/255, .02)
                on_press: root.manager.current = "settings"
                Image:
                    id: image_menu
                    source: "resources/images/menu_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

        Label:
            id: label_word
            size_hint: 1, 0.7
            font_size: "40dp"
            font_name: "Georgia"
            color: 30/255, 30/255, 30/255, 1
            valign: "middle"

        BoxLayout:
            id: lower_bar
            orientation: "horizontal"
            size_hint: 1, 0.2
            padding: "15dp"

            Button:
                id: button_yes
                on_press: app.flashcard.yes_button_clicked()
                background_normal: ""
                background_color: (170/255, 242/255, 0/255, 1)
                Image:
                    id: thumb_up
                    source: "resources/images/thumb_up.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 5

            Button:
                id: button_no
                on_press: app.flashcard.no_button_clicked()
                background_normal: ''
                background_color: (255/255, 128/255, 0/255, 1)
                Image:
                    id: thumb_down
                    source: "resources/images/thumb_down.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y - 15

<SettingsScreen>:
    name: "settings"
    canvas.before:
        Rectangle:
            id: settings_background_image
            pos: self.pos
            size: self.size
            source: root.image_source

    BoxLayout:
        orientation: "vertical"
        padding: "30dp"
        Label:
            id: label_menu
            text: "MENU"
            size_hint: 1, 1.3
            text_size: self.size
            font_size: "19dp"
            valign: "top"
            halign: "center"

        Button:
            id: button_back
            text: "back"
            font_size: "21dp"
            background_normal: ''
            background_color: (255/255, 128/255, 0/255, 0.8)
            on_press: root.manager.current = "main"

        Button:
            id: button_reset_lesson
            text: "reset lesson"
            font_size: "21dp"
            background_normal: ""
            background_color: (255/255, 128/255, 0/255, 0.65)
            on_press: app.flashcard.reset_lesson_button_clicked()

        Button:
            id: button_next_lesson
            text: "next lesson"
            font_size: "21dp"
            background_normal: ""
            background_color: (255/255, 128/255, 0/255, 0.65)
            on_press: app.flashcard.next_lesson_button_clicked()

        Button:
            id: button_quit
            text: "quit"
            font_size: "21dp"
            background_normal: ''
            background_color: (255/255, 128/255, 0/255, 0.8)
            on_press: app.flashcard.exit_button_clicked()

        #Button:
        #    id: button_test_screen
